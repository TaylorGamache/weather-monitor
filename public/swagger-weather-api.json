{
    "swagger": "2.0",
    "info": {
        "title": "Weather Monitor API",
        "description": "Weather Monitoring Service",
        "version": "1.0.0"
    },
    "host": "localhost:3000",
    "schemes": [
        "http"
    ],
    "basePath": "/api/v1",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/weather": {
            "post": {
              "summary": "Add/Update a weather trigger",
              "description": "This endpoint is used to add a weather trigger for the weather monitoring service",
                "parameters": [
                    {
                        "name": "weather trigger",
                        "in": "body",
                        "description": "weather trigger JSON to be created",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Weather"
                        }
                    }
                ],
                "tags": [
                    "Weather"
                ],
                "responses": {
                    "200": {
                        "description": "Success message",
                        "schema": {
                            "$ref": "#/definitions/Success"
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/weather/:recipeid": {
            "delete": {
                "summary": "Delete a weather trigger",
                "description": "This endpoint deletes a weather trigger matching the recipeID",
                "parameters": [
                    {
                        "name": "recipeID",
                        "in": "path",
                        "description": "Unique identifier of a recipe/weather trigger",
                        "required": true,
                        "type": "string"
                    }
                ],
                "tags": [
                    "Weather"
                ],
                "responses": {
                    "200": {
                        "description": "Success message",
                        "schema": {
                            "$ref": "#/definitions/Success"
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Weather": {
            "properties": {
                "recipeID": {
                    "type": "string",
                    "description": "Unique identifier representing a specific recipe/weather trigger"
                },
                "callbackURL": {
                    "type": "string",
                    "description": "Callback URL to call when scheduled time is up"
                },
                "trigger": {
                    "description": "List of trigger specifications",
                    "$ref": "#/definitions/Trigger"
                }
            }
        },
        "Trigger": {
            "properties": {
                "numWatch": {
                    "type": "integer",
                    "description": "Value to watch for if the relations calls for it."
                },
				"weather":{
					"type": "string",
					"description": "Only used in relation currentWeather and its the type of weather to watch for. Use either snow, rain, cloudy, or clear."
				},
				"numSystem": {
                    "type": "string",
                    "description": "To determine either US Standard(use US) or Metric(use M)."
                },
                "lon": {
                    "type": "integer",
                    "description": "Longitude of location",
					"required": true
                },
				"lat": {
                    "type": "integer",
                    "description": "Latitude of location",
					"required": true
                },
                "relation": {
                    "type": "string",
                    "description": "Type of weather trigger (tempGT, tempLT, Alert, currentWeather, weatherChange, curForecast, tomForecast, todHumid, todWind, todUV, tomLtemp, tomHtemp, todSunrise, todSunset)",
					"required": true
                },
				"prevCond": {
                    "type": "string",
                    "description": "Only used in relations weatherChange and Alert. Used to limit the amount of times the recipe can trigger."
                },
				"inThreshold": {
					"type": "boolean",
					"description": "Always set to false. Used for limiting the amount of times a recipe can trigger."
				}
            }
        },

        "Success": {
            "properties": {
                "success": {
                    "type": "boolean",
                    "description": "Whether the request was successful or not"
                },
                "msg": {
                    "type": "string",
                    "description": "Success or error message"
                },
                "weather": {
                    "description": "Weather object returned",
                    "$ref": "#/definitions/Weather"
                }
            }
        },
        "Error": {
            "properties": {
                "success": {
                    "type": "boolean"
                },
                "msg": {
                    "type": "string"
                }
            }
        }
    }
}


